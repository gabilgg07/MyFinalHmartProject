@model List<Offer>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Offers Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Offer</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Product Name</th>
                                        <th>Offer Time</th>
                                        <th>IsMain</th>
                                        <th>Predecessor</th>
                                        <th>SupporType</th>
                                        <th>Cushioning</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Offer item in Model)
                                    {
                                    <tr>
                                        <td>@item.Order</td>
                                        <td>@item.Product.Name</td>
                                        <td style="width:120px">@item.OfferTime.ToString("HH:mm dd-MM-yyyy")</td>
                                        @if (item.IsMain)
                                        {
                                            <td class="green-text">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="red-text">No</td>
                                        }

                                        <td>
                                            @item.Predecessor
                                        </td>
                                        <td style="width:180px">
                                            @item.SupporType
                                        </td>
                                        <td style="width:180px">
                                            @item.Cushioning
                                        </td>
                                        <th>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                                        </th>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

