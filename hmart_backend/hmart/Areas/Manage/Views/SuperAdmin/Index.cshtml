
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Admins Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-controller="role" asp-action="index" class="btn btn-warning">Show Admin Roles</a>
                            <a asp-action="create" class="btn btn-success m-lt-buttons-1">Create Admin</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Fisrt Name</th>
                                        <th>Last Name</th>
                                        <th>UserName</th>
                                        <th>Email</th>
                                        <th>Buttons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.FisrtName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

