@model List<Banner>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Banners Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Banner</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>IsMain</th>
                                        <th style="width:200px">Image</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Banner banner in Model)
                                    {
                                    <tr>
                                        <td>@banner.Order</td>
                                        <td>@banner.Title</td>
                                        <td>@banner.Price.ToString("#.00")</td>
                                        @if (banner.IsMain)
                                        {
                                            <td class="green-text">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="red-text">No</td>
                                        }

                                        <td>
                                            <img class="" style="width:100%" src="/uploads/banners/@banner.Image" alt="Banner Image" />
                                        </td>
                                        <th>
                                            <a asp-action="edit" asp-route-id="@banner.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@banner.Id" class="btn btn-danger w-100">Delete</a>
                                        </th>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

