@model List<ContactMessage>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Contact Messages Table
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>E-mail</th>
                                        <th style="width:85px">CreateAt</th>
                                        <th>Subject</th>
                                        <th>Message</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="text-center">@item.FirstName</td>
                                        <td class="text-center">@item.LastName</td>
                                        <td class="text-center">@item.Email</td>
                                        <td class="text-center">@item.CreateAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="text-center">@item.Subject</td>
                                        <td>@item.Message</td>
                                        <td><a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

