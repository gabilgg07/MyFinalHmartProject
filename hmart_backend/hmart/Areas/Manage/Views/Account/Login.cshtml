@model AdminLoginVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/x-icon" href="https://cpwebassets.codepen.io/assets/favicon/favicon-aec34940fbc1a6e787974dcd360f2c6b63348d4b1f4e06c77743096d55480f33.ico">
    <link rel="mask-icon" type="" href="https://cpwebassets.codepen.io/assets/favicon/logo-pin-8f3771b1072e3c38bd662872f6b673a722f4b3ca2421637d5596661b4e2132cc.svg" color="#111">
    <link rel="canonical" href="https://codepen.io/andytran/pen/RPBdgM">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link href="~/manage/assets/css/login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="container">

        <div class="content">
            <div class="card"></div>
            <div class="card">
                <h1 class="title">Login</h1>
                <form method="post">
                    <div class="input-container">
                        <div class="red" asp-validation-summary="ModelOnly"></div>
                    </div>
                    <div class="input-container">
                        <input asp-for="UserName" required="required" />
                        <label asp-for="UserName">Username</label>
                        <div class="bar"></div>
                        <span asp-validation-for="UserName" class="red validate-span"></span>
                    </div>
                    <div class="input-container">
                        <input asp-for="Password" required="required" />
                        <label asp-for="Password">Password</label>
                        <div class="bar"></div>
                        <span asp-validation-for="Password" class="red validate-span"></span>
                    </div>
                    <div class="button-container">
                        <button type="submit"><span>Go</span></button>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <script src="https://cpwebassets.codepen.io/assets/common/stopExecutionOnTimeout-8216c69d01441f36c0ea791ae2d4469f0f8ff5326f00ae2d00e4bb7d20e24edb.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdpn.io/cp/internal/boomboom/pen.js?key=pen.js-24a3d76d-7bbc-1857-05b3-c74ca2cf65e4" crossorigin=""></script>
    <script>
        $('.toggle').on('click', function () {
            $('.container').stop().addClass('active');
        });

        $('.close').on('click', function () {
            $('.container').stop().removeClass('active');
        });
    </script>
</body>
</html>