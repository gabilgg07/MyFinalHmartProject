@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Sliders Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Slider</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Title</th>
                                        <th>Subtitle</th>
                                        <th>Button Text</th>
                                        <th style="width:125px">Image</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Slider slider in Model)
                                    {
                                    <tr>
                                        <td>@slider.Order</td>
                                        <td>@slider.Title</td>
                                        <td>@slider.Subtitle</td>
                                        <td>@slider.BtnText</td>
                                        <td class="d-flex j-c-c">
                                            <img class="" style="width:50%" src="/uploads/sliders/@slider.Image" alt="Product Image"/>
                                        </td>
                                        <th>
                                            <a asp-action="edit" asp-route-id="@slider.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger w-100">Delete</a>
                                        </th>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

