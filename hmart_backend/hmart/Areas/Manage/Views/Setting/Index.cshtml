
@model Setting
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row d-flex j-c-sb a-i-c before_after-none">
            <div class="col-md-3">
                <h1>Setting</h1>
            </div>
            <div class="col-md-3">
                <a asp-action="update" class="waves-effect waves-light btn btn-warning" style="width:100%">Update</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="row m-0">
                    <div class="col-12">
                        <div class="card red">
                            <div class="card-content">
                                <span class="card-title">Wellcome Text</span>
                                <p>
                                    @Model.WellComeText
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card red">
                    <div class="card-content white-text">
                        <span class="card-title">Fashion Background Image</span>
                        <div class="image">
                            <img style="width: 100%" src="/uploads/setting/@Model.FashionBgImgSrc" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="card teal">
                    <div class="card-content white-text">
                        <span class="card-title">Title Icon</span>
                        <div class="image">
                            <img style="width: auto; max-height: 42px" src="/uploads/setting/@Model.TitleIconSrc" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card teal">
                    <div class="card-content white-text">
                        <span class="card-title">Header Logo</span>
                        <div class="image">
                            <img style="width: 100%; max-height: 42px" src="/uploads/setting/@Model.HeaderLogoSrc" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card teal">
                    <div class="card-content white-text">
                        <span class="card-title">Footer Logo</span>
                        <div class="image">
                            <img style="width: 100%; max-height: 42px" src="/uploads/setting/@Model.FooterLogoSrc" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card teal">
                    <div class="card-content white-text">
                        <span class="card-title">Slider Background Image</span>
                        <div class="image">
                            <img style="width: 100%" src="/uploads/setting/@Model.SliderBgImgSrc" alt="Slider Background Image"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card blue-grey">
                    <div class="card-content white-text">
                        <span class="card-title">Main Background Image</span>
                        <div class="image">
                            <img style="width: 100%" src="/uploads/setting/@Model.MainBgImgSrc" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="row m-0">
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Featured Title</span>
                                <p>
                                    @Model.FeaturedTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card orange darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Featured Description</span>
                                <p>
                                    @Model.FeaturedDesc
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Testimonials Title</span>
                                <p>
                                    @Model.TestimonialsTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card orange darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Testimonials Description</span>
                                <p>
                                    @Model.TestimonialsDesc
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Blogs Title</span>
                                <p>
                                    @Model.BlogsTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card orange darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Blogs Description</span>
                                <p>
                                    @Model.BlogsDesc
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Related Title</span>
                                <p>
                                    @Model.RelatedTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card orange darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Related Description</span>
                                <p>
                                    @Model.RelatedDesc
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="row ml-0 m-0">
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Fashion Title</span>
                                <p>
                                    @Model.FashionTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card orange darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Fashion Subtitle</span>
                                <p>
                                    @Model.FashionSubTitle
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card red">
                            <div class="card-content white-text">
                                <span class="card-title">Fashion Button Text</span>
                                <p>
                                    @Model.FashionBtnText
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card teal darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Blogs Description</span>
                                <p>
                                    @Model.AboutText
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card light-blue darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Address</span>
                                <p>
                                    @Model.Address
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card light-blue darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Phone 1</span>
                                <p>
                                    @Model.Phone1
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card light-blue darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Phone 2</span>
                                <p>
                                    @Model.Phone2
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card light-blue darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">E-mail</span>
                                <p>
                                    @Model.Email
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card light-blue darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">Site</span>
                                <p>
                                    @Model.Site
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row d-flex j-c-sb a-i-c before_after-none my-4">
            <div class="col-md-4">
                <h1>About Page Setting</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card teal darken-2">
                    <div class="card-content white-text">
                        <span class="card-title">About Title</span>
                        <p>
                            @Model.AboutTitle
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card orange darken-2">
                    <div class="card-content white-text">
                        <span class="card-title">About Subtitle</span>
                        <p>
                            @Model.AboutSubtitle
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card teal darken-3">
                    <div class="card-content white-text">
                        <span class="card-title">About Subtitle</span>
                        <p>
                            @Model.AboutDesc
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card blue-grey darken-4">
                    <div class="card-content white-text">
                        <span class="card-title">Slider Background Image</span>
                        <div class="image">
                            <img style="width: 100%" src="/uploads/setting/@Model.PromoImgSrc" alt="Promo Image" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="row m-0">
                        <div class="col-md-12">
                            <div class="card light-blue darken-4">
                                <div class="card-content white-text">
                                    <span class="card-title">Promo Video Link</span>
                                    <p>
                                        @Model.PromoVideoLink
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card teal darken-2">
                                <div class="card-content white-text">
                                    <span class="card-title">About Team Title</span>
                                    <p>
                                        @Model.AboutTeamTitle
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card orange darken-2">
                                <div class="card-content white-text">
                                    <span class="card-title">About Team Description</span>
                                    <p>
                                        @Model.AboutTeamDesc
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



