@model List<Feature>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Features Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Feature</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Title</th>
                                        <th>Subtitle</th>
                                        <th style="width:125px">Image</th>
                                        <th>Button</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Feature feature in Model)
                                    {
                                        <tr>
                                            <td>@feature.Order</td>
                                            <td>@feature.Title</td>
                                            <td>@feature.Subtitle</td>
                                            <td class="d-flex j-c-c" style="background-color: #e4a05a">
                                                <img class="" style="width:100%" src="/uploads/features/@feature.Image" alt="Feature Image" />
                                            </td>
                                            <th>
                                                <a asp-action="edit" asp-route-id="@feature.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                                <a asp-action="delete" asp-route-id="@feature.Id" class="btn btn-danger w-100">Delete</a>
                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

