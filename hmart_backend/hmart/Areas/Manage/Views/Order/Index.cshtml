@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Orders Table
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Product Type Count</th>
                                        <th>Created At</th>
                                        <th>Total Price</th>
                                        <th>Status</th>
                                        <th>Buttons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AppUser.FisrtName @item.AppUser.LastName </td>
                                            <td>@item.OrderItems.Count()</td>
                                            <td>@item.CreatedAt.ToString("HH:mm dd.MM.yyyy")</td>
                                            <td>@item.TotalPrice.ToString("0.##")</td>
                                            <td>
                                                @if (item.Status == null)
                                                {
                                                    <span class="badge badge-warning">Pending</span>
                                                }
                                                else if (item.Status == true)
                                                {
                                                    <span class="badge badge-success">Accepting</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Rejecting</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-warning w-100 mb-1">@(item.Status==null?"Edit":"Detail")</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

