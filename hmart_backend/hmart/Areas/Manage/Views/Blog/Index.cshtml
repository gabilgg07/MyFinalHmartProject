@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-action">
                        Blogs Table
                        <div class="create-div d-flex j-c-fe">
                            <a asp-action="create" class="btn btn-success">Create Blog</a>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th style="width:100px">Date</th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Description</th>
                                        <th style="width:200px">Image</th>
                                        <th>Buttons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                        <td><a asp-action="detail" asp-route-id="@item.Id">@item.Title</a></td>
                                        <td>@item.Author</td>
                                        <td>@item.Desc</td>
                                        <td class="text-center">
                                            <img class="border border-2" style="width: 60%; border: 0.7px solid #00000035" src="/uploads/blogs/@item.Image" />
                                        </td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning w-100 mb-1">Edit</a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger w-100">Delete</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

