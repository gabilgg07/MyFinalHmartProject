@model UserRegisterVM
@{
    ViewData["Title"] = "Register";
    Setting setting = ViewBag.Setting;
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image=../uploads/setting/@setting.MainBgImgSrc>
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Register</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Register</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Register start -->
    <section id="login-register" class="py-section">
        <div class="container">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-7 col-md-12 mb-col">
                        <div class="form-container">
                            <div class="login-register-form">
                                <input asp-for="Email" placeholder="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>

                                <input asp-for="UserName" placeholder="Username" />
                                <span class="text-danger" asp-validation-for="UserName"></span>

                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>

                                <input asp-for="ConfirmPassword" placeholder="Repeat Password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                                <div class="button-box">
                                    <button type="submit"><span>Register</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-12">
                        <div class="form-container register">
                            <div class="image">
                                <img id="profilImg" src="~/assets/uploads/users/user-default.png" alt="Default User"/>
                            </div>
                            <span class="choose-info">Choose File for Change Profil Image</span>
                            <div class="image-input-wrap">
                                <label asp-for="ImageFile">
                                    <input class="register-image-input" asp-for="ImageFile">
                                    <span id="imageFileName" class="file-custom">
                                        Choose File ...
                                    </span>
                                </label>
                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Register end -->
</main>
<!-- Main End -->
@section Scripts{ 

    <script>
        $(document).ready(function () {
            let imageInputValue;
            $(document).on("change", ".register-image-input", function (e) {
                let inputFile = "";
                if ($(this)[0].files[0]) {
                    inputFile = $(this)[0].files[0].name;
                    if (inputFile.length > 25) {
                        inputFile = inputFile.substring(0, 22) + "..."
                    }
                    $(this).next().text("");
                    $(this).next().append(inputFile);
                    imageInputValue = URL.createObjectURL(e.target.files[0]);

                    $("#profilImg").fadeIn("fast").attr('src', imageInputValue);
                }
            });
        });
    </script>

}