@model UserLoginVM
@{
    ViewData["Title"] = "Login";
}

<!-- Main Start -->
<main>
    <!-- Main-header start -->
    <section id="main-header" data-bg-image="../assets/uploads/commons/main-header-bg.png">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="header-title">Login</h2>
                    <ul class="page-list">
                        <li class="page-item"><a asp-controller="home" asp-action="index">Home</a></li>
                        <li class="page-item active"> Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Main-header end -->
    <!-- Login start -->
    <section id="login-register" class="py-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 m-auto">
                    <div class="form-container">
                        <div class="login-register-form">
                            <form method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <input asp-for="UserName" placeholder="Username" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" />
                                        <a class="flote-none" href="javascript:void(0)">Remember me</a>
                                        <a asp-action="forgotpassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit"><span>Login</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Login end -->
</main>
<!-- Main End -->
